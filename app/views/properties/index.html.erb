<p id="notice"><%= notice %></p>

<h1>Properties</h1>

<hr>

<%= link_to 'New Property', new_property_path , class:"btn btn-success" %>
<%= link_to "Export as CSV", "properties.csv", class: "btn btn-warning pull-right" %>

<h4>Import Properties</h4>

<%= form_tag import_properties_path, multipart:true do %>

    <div class="input-group">
      <label class="input-group-btn">
      <span class="btn btn-primary">
          Browse&hellip; <input type="file" name="file" style="display: none;" multiple>
      </span>
      </label>
      <input type="text" class="form-control" readonly>
    </div>

    <br>
    <%= submit_tag "Upload", class: "btn btn-info btn-sm"  %>
<% end %>

<hr>

<table class="table table-striped table-responsive">
  <thead>
    <tr>
      <th>Name</th>
      <!--<th>Created At</th>-->
      <th>Addr1</th>
      <th>Addr2</th>
      <th>City</th>
      <th>State</th>
      <th>Zip</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @properties.each do |property| %>
      <tr>
        <td><%= property.name %></td>
        <!--<td><%= time_ago_in_words property.created_at.to_datetime %> ago</td>-->
        <td><%= property.addr1 %></td>
        <td><%= property.addr2 %></td>
        <td><%= property.city %></td>
        <td><%= property.state %></td>
        <td><%= property.zip %></td>
        <td><%= link_to 'Details', property , class:"btn btn-default" %></td>
        <td><%= link_to 'Edit', edit_property_path(property), class:"btn btn-info" %></td>
        <td><%= link_to 'Delete', property, method: :delete, data: { confirm: 'Are you sure?' } , class:"btn btn-danger"%></td>
      </tr>
    <% end %>
  </tbody>
</table>


